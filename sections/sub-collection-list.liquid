{% schema %}
{
  "name": "Sub Collections Menu",
  "tag": "section",
  "settings": [],
  "presets": [
    {
      "name": "Sub Collections Menu"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.manta-sub-cat-layout.page-width {
  margin-top: 20px;
}
.manta-sub-cat-layout {
  display: flex;
  gap: 40px;
  padding: 40px 0;
}

.manta-sub-cat-sidebar {
  width: 200px;
  flex-shrink: 0;
  display: none;
}

@media screen and (min-width: 1024px) {
  .manta-sub-cat-sidebar {
    display: block;
  }
}

.manta-sub-cat-sidebar h2 {
  font-weight: bold;
  margin-bottom: 16px;
  font-size: 1.1rem;
}

.manta-sub-cat-sidebar ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.manta-sub-cat-sidebar li {
  margin-bottom: 12px;
}

.manta-sub-cat-sidebar a {
  text-decoration: none;
  color: #111;
  font-weight: 500;
}

.manta-sub-cat-sidebar a:hover {
  text-decoration: underline;
}

/* ✅ NEW: Use CSS Grid for the item layout */
.manta-sub-cat-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
  gap: 16px;
  flex: 1;
}

.manta-sub-cat-item {
  text-align: center;
  text-decoration: none;
  color: inherit;
  transition: box-shadow 0.2s ease;
}

.manta-sub-cat-box {
  border: 1px solid #e1e1e1;
  border-radius: 12px;
  overflow: hidden;
  background: #fff;
  transition: border-color 0.2s ease;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.manta-sub-cat-box:hover {
  border-color: #999;
}

.manta-sub-cat-image-wrapper {
  position: relative;
  width: 100%;
  padding-top: 100%; /* Square container */
  background: #fff;
  overflow: hidden;
}

.manta-sub-cat-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: contain;
  object-position: center;
  display: block;
}

.manta-sub-cat-title {
  font-size: 1.2rem;
  font-weight: bold;
  padding: 16px;
}

/* ✅ Force 2-column layout on all mobile widths */
@media screen and (max-width: 768px) {
  .manta-sub-cat-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}
{% endstylesheet %}

{% if collection.metafields.custom.sub_collection_list.value != blank %}
  {% assign sub_collections = collection.metafields.custom.sub_collection_list.value %}

  <div class="manta-sub-cat-layout page-width">
    
    <!-- Sidebar Menu (Desktop only) -->
    <aside class="manta-sub-cat-sidebar">
      <h2>Collection Name</h2>
      <ul>
        {% for sub_collection in sub_collections %}
          <li>
            <a href="{{ sub_collection.url }}">{{ sub_collection.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </aside>

    <!-- Grid of Sub-Collections -->
    <div class="manta-sub-cat-grid">
      {% for sub_collection in sub_collections %}
        {% assign custom_image = sub_collection.metafields.custom.collection_image %}

        <a href="{{ sub_collection.url }}" class="manta-sub-cat-item">
          <div class="manta-sub-cat-box">
            <div class="manta-sub-cat-image-wrapper">
              {% if custom_image %}
                <img
                  src="{{ custom_image | img_url: 'large' }}"
                  alt="{{ sub_collection.title }}"
                  class="manta-sub-cat-image"
                  width="500"
                  height="500"
                >
              {% elsif sub_collection.image %}
                <img
                  src="{{ sub_collection.image | img_url: 'large' }}"
                  alt="{{ sub_collection.title }}"
                  class="manta-sub-cat-image"
                  width="500"
                  height="500"
                >
              {% endif %}
            </div>

            <div class="manta-sub-cat-title">
              {{ sub_collection.title }}
            </div>
          </div>
        </a>
      {% endfor %}
    </div>

  </div>
{% else %}
  <p>No sub-collections available for this category.</p>
{% endif %}
