<script>
  (function() {
    const link = document.getElementById('mantaBtn');
    if (!link) return;

    // find your slide-up button inside it
    const btn = link.querySelector('.manta-btt-slide-up');
    if (!btn) return;

    link.addEventListener('click', function(e) {
      // if we've already triggered, let it go through normally
      if (link.classList.contains('clicked')) return;

      e.preventDefault();                 // stop immediate navigation
      link.classList.add('clicked');      // guard against double-clicks
      link.style.pointerEvents = 'none';  // disable further clicks

      // trigger the animation on the button
      btn.classList.add('trigger-hover');

      // when the button’s background-size transition ends…
      btn.addEventListener('transitionend', function onEnd(ev) {
        if (ev.propertyName === 'background-size') {
          // actually navigate to the href
          window.location.href = link.href;
          btn.removeEventListener('transitionend', onEnd);
        }
      });
    });
  })();
</script>