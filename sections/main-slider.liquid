        if (expanded) {
          // Collapse the menu
          menu.classList.remove("collapsed");
          menu.classList.add("expanded");
          toggleBtn.textContent = "Show Less";
          expanded = false;
        } else {
          // Expand the menu
          menu.classList.remove("expanded");
          menu.classList.add("collapsed");
          toggleBtn.textContent = "Show More";
          expanded = true;
        }
      });
    });
