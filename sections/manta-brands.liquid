{% schema %} 
{
  "name": "Manta Partners Brands",
  "settings": [],
  "blocks": [
    {
      "type": "partner_logo",
      "name": "Partner Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "manta-partners-logo",
          "label": "Partner Logo",
          "info": "Recommended: PNG or SVG format. Max file size 200KB. (Preferably SVG)."
        },
        {
          "type": "url",
          "id": "manta-partners-link",
          "label": "Partner Link"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Manta Partners Brands",
      "category": "Partners",
      "blocks": [
        {
          "type": "partner_logo"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
.manta-partners-slider {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px 0;
  background: #f8f8f8;
  overflow: hidden;
}

.manta-partners-slider-container {
  display: flex;
  gap: 20px;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: nowrap;
  overflow: hidden;
  white-space: nowrap;
  transition: transform 0.5s ease-in-out;
}

.manta-partners-logo {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px;
  background: white;
  border-radius: 8px;
  box-shadow: 0 1px 2px rgb(var(--color-foreground),.06), 0 1px 3px rgb(var(--color-foreground),.1);
  transition: transform 0.3s ease-in-out;
  min-width: 150px;
  max-width: 200px;
  height: auto;
}

.manta-partners-logo:hover {
  transform: scale(1.05);
}

.manta-partners-logo img {
  width: 100%;
  height: auto;
  object-fit: contain;
  display: block;
}

.manta-partners-slider-arrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(0, 0, 0, 0.5);
  color: white;
  border: none;
  padding: 10px;
  cursor: pointer;
  z-index: 10;
}

.manta-partners-slider-arrow-left {
  left: 10px;
}

.manta-partners-slider-arrow-right {
  right: 10px;
}

@media (max-width: 768px) {
  .manta-partners-slider-container {
    justify-content: flex-start;
    overflow-x: auto;
    gap: 10px;
    padding: 10px;
  }
}
</style>

<div class="manta-partners-slider" onmouseover="mantaPartnersStopAutoScroll()" onmouseleave="mantaPartnersRestartAutoScroll()">
  <button class="manta-partners-slider-arrow manta-partners-slider-arrow-left" onclick="mantaPartnersManualSlideLeft()">&#9664;</button>
  <div class="manta-partners-slider-container">
    {% for block in section.blocks %}
      {% if block.settings.manta-partners-logo != blank %}
        <a href="{{ block.settings.manta-partners-link }}" class="manta-partners-logo" target="_blank" rel="noopener noreferrer">
          <img src="{{ block.settings.manta-partners-logo | image_url: width:200, height:100 }}" width="200" height="100" alt="Partner Logo">
        </a>
      {% endif %}
    {% endfor %}
  </div>
  <button class="manta-partners-slider-arrow manta-partners-slider-arrow-right" onclick="mantaPartnersManualSlideRight()">&#9654;</button>
</div>

<script>
let mantaPartnersScrollInterval;
let mantaPartnersAutoScrollPaused = false;

function mantaPartnersStartAutoScroll() {
  if (!mantaPartnersAutoScrollPaused) {
    mantaPartnersScrollInterval = setInterval(() => {
      mantaPartnersSlideRight();
    }, 2000);
  }
}

document.addEventListener("DOMContentLoaded", mantaPartnersStartAutoScroll);

function mantaPartnersStopAutoScroll() {
  mantaPartnersAutoScrollPaused = true;
  clearInterval(mantaPartnersScrollInterval);
}

function mantaPartnersRestartAutoScroll() {
  mantaPartnersAutoScrollPaused = false;
  clearInterval(mantaPartnersScrollInterval);
  setTimeout(mantaPartnersStartAutoScroll, 10000);
}

function mantaPartnersManualSlideLeft() {
  mantaPartnersStopAutoScroll();
  mantaPartnersRestartAutoScroll();
  mantaPartnersSlideLeft();
}

function mantaPartnersManualSlideRight() {
  mantaPartnersStopAutoScroll();
  mantaPartnersRestartAutoScroll();
  mantaPartnersSlideRight();
}

function mantaPartnersSlideLeft() {
  const container = document.querySelector('.manta-partners-slider-container');
  container.style.transition = 'transform 0.5s ease-in-out';
  container.style.transform = 'translateX(200px)';
  setTimeout(() => {
    container.insertBefore(container.lastElementChild, container.firstElementChild);
    container.style.transition = 'none';
    container.style.transform = 'translateX(0)';
  }, 500);
}

function mantaPartnersSlideRight() {
  const container = document.querySelector('.manta-partners-slider-container');
  container.style.transition = 'transform 0.5s ease-in-out';
  container.style.transform = 'translateX(-200px)';
  setTimeout(() => {
    container.appendChild(container.firstElementChild);
    container.style.transition = 'none';
    container.style.transform = 'translateX(0)';
  }, 500);
}
</script>
