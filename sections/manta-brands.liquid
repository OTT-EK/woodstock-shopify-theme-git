{% schema %} 
{
  "name": "Ottn Partner Brands",
  "settings": [],
  "blocks": [
    {
      "type": "partner_logo",
      "name": "Partner Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "manta_partner_logo",
          "label": "Partner Logo",
          "info": "Recommended: PNG or SVG format. Max file size 200KB. (Preferably SVG)."
        },
        {
          "type": "url",
          "id": "manta_partner_link",
          "label": "Partner Link"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Manta Partner Brands",
      "category": "Partners",
      "blocks": [
        {
          "type": "partner_logo"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
.manta-partner-slider {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px 0;
  background: #f8f8f8;
  overflow: hidden;
}

.manta-partner-slider-container {
  display: flex;
  gap: 20px;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: nowrap;
  overflow: hidden;
  white-space: nowrap;
  transition: transform 0.5s ease-in-out;
}

.manta-partner-logo {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px;
  background: white;
  border-radius: 8px;
  box-shadow: 0 1px 2px rgb(var(--color-foreground),.06), 0 1px 3px rgb(var(--color-foreground),.1);
  transition: transform 0.3s ease-in-out;
  min-width: 150px;
  max-width: 200px;
  height: auto;
}

.manta-partner-logo:hover {
  transform: scale(1.05);
}

.manta-partner-logo img {
  width: 100%;
  height: auto;
  object-fit: contain;
  display: block;
}

.manta-slider-arrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(0, 0, 0, 0.5);
  color: white;
  border: none;
  padding: 10px;
  cursor: pointer;
  z-index: 10;
}

.manta-slider-arrow-left {
  left: 10px;
}

.manta-slider-arrow-right {
  right: 10px;
}

@media (max-width: 768px) {
  .manta-partner-slider-container {
    justify-content: flex-start;
    overflow-x: auto;
    gap: 10px;
    padding: 10px;
  }
}
</style>

<div class="manta-partner-slider">
  <button class="manta-slider-arrow manta-slider-arrow-left" onclick="mantaSlideLeft()">&#9664;</button>
  <div class="manta-partner-slider-container">
    {% for block in section.blocks %}
      {% if block.settings.manta_partner_logo != blank %}
        <a href="{{ block.settings.manta_partner_link }}" class="manta-partner-logo" target="_blank" rel="noopener noreferrer">
          <img src="{{ block.settings.manta_partner_logo | image_url: width:200, height:100 }}" width="200" height="100" alt="Partner Logo">
        </a>
      {% endif %}
    {% endfor %}
  </div>
  <button class="manta-slider-arrow manta-slider-arrow-right" onclick="mantaSlideRight()">&#9654;</button>
</div>

<script>
let scrollInterval;

function startAutoScroll() {
  scrollInterval = setInterval(() => {
    mantaSlideRight();
  }, 2000);
}

document.addEventListener("DOMContentLoaded", startAutoScroll);

function mantaSlideLeft() {
  const container = document.querySelector('.manta-partner-slider-container');
  container.appendChild(container.firstElementChild);
}

function mantaSlideRight() {
  const container = document.querySelector('.manta-partner-slider-container');
  container.prepend(container.lastElementChild);
}
</script>