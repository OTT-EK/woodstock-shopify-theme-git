{% schema %}
  {
    "name": "Main Slider",
    "settings": [],
    "presets": [
      {"name": "Main Slider"}
    ]
  }
{% endschema %}

<style>
  .manta-grid-container {
    display: grid;
    grid-template-columns: 1fr 3fr;
    gap: 20px;
  }
  
  .manta-sidebar {
    background: #f4f4f4;
    padding: 20px;
  }
  
  .manta-content {
    display: grid;
    grid-template-rows: auto auto;
    gap: 20px;
  }
  
  .manta-content-box-large {
    background: #ddd;
    padding: 20px;
    height: 200px;
  }
  
  .manta-content-box-small-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }
  
  .manta-content-box-small {
    background: #ccc;
    padding: 20px;
    height: 100px;
  }

  @media (max-width: 1024px) {
    .manta-grid-container {
      grid-template-columns: 1fr;
    }
    .manta-sidebar {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .manta-content-box-small-container {
      display: flex;
      overflow-x: scroll;
      white-space: nowrap;
      gap: 10px;
    }
    .manta-content-box-small {
      flex: 0 0 auto;
      width: 45%;
    }
  }

  /* Slider styles */
  .slider {
    position: relative;
    overflow: hidden;
    width: 100%;
    height: 100%;
  }

  .slider__slides {
    display: flex;
    transition: transform 0.5s ease;
  }

  .slider__slide {
    min-width: 100%;
    box-sizing: border-box;
  }

  .slider__nav {
    position: absolute;
    top: 50%;
    width: 100%;
    display: flex;
    justify-content: space-between;
    transform: translateY(-50%);
  }

  .slider__nav button {
    background: rgba(0, 0, 0, 0.5);
    border: none;
    color: white;
    padding: 10px;
    cursor: pointer;
  }
</style>

<div class="manta-grid-container page-width">
  <div class="manta-sidebar">
    <p>Sidebar Content</p>
  </div>
  <div class="manta-content">
    <div class="manta-content-box-large">
      <div class="slider">
        <div class="slider__slides">
          <div class="slider__slide">
            <img src="slide1.jpg" alt="Slide 1">
          </div>
          <div class="slider__slide">
            <img src="slide2.jpg" alt="Slide 2">
          </div>
        </div>
        <div class="slider__nav">
          <button class="slider__prev">Prev</button>
          <button class="slider__next">Next</button>
        </div>
      </div>
    </div>
    <div class="manta-content-box-small-container">
      <div class="manta-content-box-small">
        <p>Small Box 1</p>
      </div>
      <div class="manta-content-box-small">
        <p>Small Box 2</p>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const slides = document.querySelector('.slider__slides');
    const slideCount = slides.children.length;
    let currentIndex = 0;

    document.querySelector('.slider__prev').addEventListener('click', function() {
      currentIndex = (currentIndex > 0) ? currentIndex - 1 : slideCount - 1;
      slides.style.transform = `translateX(-${currentIndex * 100}%)`;
    });

    document.querySelector('.slider__next').addEventListener('click', function() {
      currentIndex = (currentIndex < slideCount - 1) ? currentIndex + 1 : 0;
      slides.style.transform = `translateX(-${currentIndex * 100}%)`;
    });
  });
</script>