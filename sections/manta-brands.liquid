{% schema %} 
{
  "name": "Manta Partners Brands",
  "settings": [],
  "blocks": [
    {
      "type": "partner_logo",
      "name": "Partner Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "manta-partners-logo",
          "label": "Partner Logo",
          "info": "Recommended: PNG or SVG format. Max file size 200KB. (Preferably SVG)."
        },
        {
          "type": "url",
          "id": "manta-partners-link",
          "label": "Partner Link"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Manta Partners Brands",
      "category": "Partners",
      "blocks": [
        {
          "type": "partner_logo"
        }
      ]
    }
  ]
}
{% endschema %}

<!-- SwiperJS Slider -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" defer></script>

<style>
.manta-partners-container {
  background-color: #f8f8f8;
  border-radius: 8px;
  padding: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20px;
  position: relative;
}

.manta-partners-slider-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  width: calc(100% - 120px);
}

.manta-partners-slider {
  position: relative;
  padding: 20px 0;
  overflow: hidden;
  flex-grow: 1;
}

.manta-partners-slider-container {
  width: 100%;
  overflow: hidden;
}

.manta-partners-logo img {
  width: 200px;
  height: 100px;
  object-fit: contain;
  display: block;
}

.manta-partners-slider-arrow {
  background: rgba(0, 0, 0, 0.5);
  color: white;
  border: none;
  padding: 15px 20px;
  cursor: pointer;
  z-index: 10;
  border-radius: 5px;
  transition: background 0.3s;
}

.manta-partners-slider-arrow:hover {
  background: rgba(0, 0, 0, 0.7);
}

.manta-partners-slider-arrow-left,
.manta-partners-slider-arrow-right {
  width: 50px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
}

.manta-partners-slider-arrow-left {
  left: 10px;
}

.manta-partners-slider-arrow-right {
  right: 10px;
}
</style>

<div class="page-width">
  <div class="manta-partners-container">
    <button class="manta-partners-slider-arrow manta-partners-slider-arrow-left">&#9664;</button>
    <div class="manta-partners-slider-wrapper">
      <div class="swiper manta-partners-slider-container">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            {% if block.settings.manta-partners-logo != blank %}
              <div class="swiper-slide">
                <a href="{{ block.settings.manta-partners-link }}" class="manta-partners-logo" target="_blank" rel="noopener noreferrer">
                  <img src="{{ block.settings.manta-partners-logo | img_url: 'master'}}" alt="Partner Logo" width="200" height="100">
                </a>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
    <button class="manta-partners-slider-arrow manta-partners-slider-arrow-right">&#9654;</button>
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const swiper = new Swiper(".manta-partners-slider-container", {
    slidesPerView: 6,
    spaceBetween: 20,
    loop: true,
    autoplay: {
      delay: 2000,
      disableOnInteraction: false,
    },
    navigation: {
      nextEl: ".manta-partners-slider-arrow-right",
      prevEl: ".manta-partners-slider-arrow-left",
    },
    breakpoints: {
      320: {
        slidesPerView: 2,
        spaceBetween: 10
      },
      480: {
        slidesPerView: 3,
        spaceBetween: 15
      },
      768: {
        slidesPerView: 4,
        spaceBetween: 15
      },
      1024: {
        slidesPerView: 6,
        spaceBetween: 20
      }
    }
  });
});
</script>
