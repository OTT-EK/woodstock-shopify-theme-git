{% schema %} 
{
  "name": "Manta Partners Brands",
  "settings": [],
  "blocks": [
    {
      "type": "partner_logo",
      "name": "Partner Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "manta-partners-logo",
          "label": "Partner Logo",
          "info": "Recommended: PNG or SVG format. Max file size 200KB. (Preferably SVG)."
        },
        {
          "type": "url",
          "id": "manta-partners-link",
          "label": "Partner Link"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Manta Partners Brands",
      "category": "Partners",
      "blocks": [
        {
          "type": "partner_logo"
        }
      ]
    }
  ]
}
{% endschema %}

<!-- FlickityJS Slider (Better Alternative) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flickity/2.2.2/flickity.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/flickity/2.2.2/flickity.pkgd.min.js" defer></script>

<style>
.manta-partners-container {
  background-color: #f8f8f8;
  border-radius: 8px;
  padding: 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10px;
  position: relative;
  overflow: hidden;
}

.manta-partners-slider-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-grow: 1;
  max-width: calc(100% - 60px);
}

.manta-partners-slider {
  position: relative;
  padding: 20px 0;
  overflow: hidden;
  flex-grow: 1;
}

.manta-partners-slider-container {
  width: 100%;
  overflow: hidden;
}

.manta-partners-logo img {
  width: 200px;
  height: 100px;
  object-fit: contain;
  display: block;
}

.manta-partners-slider-arrow {
  background: none;
  border: none;
  cursor: pointer;
  z-index: 10;
  flex-shrink: 0;
}

.manta-partners-slider-arrow svg {
  width: 24px;
  height: 24px;
  fill: none;
  stroke: currentColor;
  stroke-width: 1.5;
  stroke-linecap: round;
  stroke-linejoin: round;
}
</style>

<div class="page-width">
  <div class="manta-partners-container">
    <button class="manta-partners-slider-arrow manta-partners-slider-arrow-left" data-flickity-prev>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" color="#000000" fill="none">
        <path d="M15 6L9 12.0001L15 18" stroke="currentColor" stroke-width="1.5" stroke-miterlimit="16" stroke-linecap="round" stroke-linejoin="round" />
      </svg>
    </button>
    <div class="manta-partners-slider-wrapper">
      <div class="manta-partners-slider-container" data-flickity='{"cellAlign": "left", "contain": true, "groupCells": true, "autoPlay": 2000, "wrapAround": true}'>
        {% for block in section.blocks %}
          {% if block.settings.manta-partners-logo != blank %}
            <div class="carousel-cell">
              <a href="{{ block.settings.manta-partners-link }}" class="manta-partners-logo" target="_blank" rel="noopener noreferrer">
                <img src="{{ block.settings.manta-partners-logo | img_url: 'master' }}" width="200" height="100" alt="Partner Logo">
              </a>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
    <button class="manta-partners-slider-arrow manta-partners-slider-arrow-right" data-flickity-next>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" color="#000000" fill="none"> 
        <path d="M9.00005 6L15 12L9 18" stroke="currentColor" stroke-width="1.5" stroke-miterlimit="16" stroke-linecap="round" stroke-linejoin="round" />
      </svg>
    </button>
  </div>
</div>