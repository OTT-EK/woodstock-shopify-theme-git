<script>
  document.addEventListener("DOMContentLoaded", function() {
    // Grab elements
    const sliderEl = document.getElementById("landscapeSlider");
    const prevBtn = sliderEl.querySelector(".manta-slider-btn.prev");
    const nextBtn = sliderEl.querySelector(".manta-slider-btn.next");
    const dotsContainer = sliderEl.querySelector(".manta-dots");
    const pausePlayBtn = sliderEl.querySelector(".manta-pause-play-btn");
    const pauseIcon = sliderEl.querySelector(".manta-pause-icon");
    const playIcon = sliderEl.querySelector(".manta-play-icon");
    const progressRing = sliderEl.querySelector(".manta-progress-ring__circle");

    // For the ring stroke math
    const circumference = 2 * Math.PI * progressRing.r.baseVal.value;
    progressRing.style.strokeDasharray = circumference;
    progressRing.style.strokeDashoffset = circumference;

    // Count total slides from your Liquid blocks or from DOM:
    const totalSlides = sliderEl.querySelectorAll(".swiper-slide").length;

    // Create custom dots
    for (let i = 0; i < totalSlides; i++) {
      const dot = document.createElement("span");
      dot.addEventListener("click", () => {
        mySwiper.slideToLoop(i); 
        // .slideToLoop() ensures correct index if loop is true
      });
      dotsContainer.appendChild(dot);
    }
    const dotSpans = dotsContainer.querySelectorAll("span");

    // Initialize Swiper
    const mySwiper = new Swiper("#landscapeSlider.swiper", {
      // Optionally loop the slides
      loop: true,
      speed: 600,
      // Enable auto-play
      autoplay: {
        delay: 3000,
        disableOnInteraction: false,
      },
      on: {
        init: function(swiper) {
          // Mark the first dot as active
          dotSpans[swiper.realIndex].classList.add("active");
        },
        slideChange: function(swiper) {
          // Update the custom dots
          dotSpans.forEach(dot => dot.classList.remove("active"));
          dotSpans[swiper.realIndex].classList.add("active");
          // Reset ring offset
          progressRing.style.strokeDashoffset = circumference;
        },
        // Swiper 10/11 provides an 'autoplayTimeLeft' event,
        // which we can use to animate the ring in real time:
        autoplayTimeLeft(s, time, progress) {
          // 'progress' is between 0..1
          const offset = circumference - (progress * circumference);
          progressRing.style.strokeDashoffset = offset;
        },
      },
    });

    // ---- Hook up our custom Prev/Next buttons ----
    nextBtn.addEventListener("click", () => mySwiper.slideNext());
    prevBtn.addEventListener("click", () => mySwiper.slidePrev());

    // ---- Pause/Play button for autoplay ----
    pausePlayBtn.addEventListener("click", function() {
      if (mySwiper.autoplay.running) {
        mySwiper.autoplay.stop();
        pauseIcon.style.display = "none";
        playIcon.style.display = "inline";
      } else {
        mySwiper.autoplay.start();
        pauseIcon.style.display = "inline";
        playIcon.style.display = "none";
      }
    });
  });
</script>

